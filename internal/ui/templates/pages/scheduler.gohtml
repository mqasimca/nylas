{{define "page-scheduler"}}
<div class="page" id="page-scheduler">
    <div class="page-layout">
        <div class="page-main">
            <div class="detail-view glass-card" id="scheduler-detail">
                <div class="detail-placeholder">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <polyline points="12 6 12 12 16 14"/>
                    </svg>
                    <h2>Scheduler Commands</h2>
                    <p>Select a command from the right to see details</p>
                </div>
                <div class="detail-content" style="display: none;">
                    <div class="detail-header">
                        <h2 id="scheduler-detail-title">Command</h2>
                        <p id="scheduler-detail-desc" class="detail-desc"></p>
                        <div class="detail-cmd-row">
                            <code id="scheduler-detail-cmd">nylas scheduler</code>
                            <div class="action-buttons">
                                <button class="run-btn" id="scheduler-run-btn" onclick="runSchedulerCmd()">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polygon points="5 3 19 12 5 21 5 3"/>
                                    </svg>
                                    Run
                                    <span class="spinner"></span>
                                </button>
                                <button class="refresh-btn" onclick="refreshSchedulerCmd()" title="Re-run command">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="23 4 23 10 17 10"/>
                                        <path d="M20.49 15a9 9 0 11-2.12-9.36L23 10"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="scheduler-param-container" style="display: none;"></div>
                    <div class="detail-section">
                        <div class="output-container">
                            <div class="output-header">
                                <h3>Output</h3>
                                <div class="output-actions">
                                    <button class="copy-output-btn" onclick="copyOutput('scheduler')">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="9" y="9" width="13" height="13" rx="2"/>
                                            <path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1"/>
                                        </svg>
                                        Copy
                                    </button>
                                </div>
                            </div>
                            <pre class="output-pre" id="scheduler-output">Run a command to see output here...</pre>
                        </div>
                        <div id="scheduler-timestamp" class="timestamp"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-sidebar">
            <div class="glass-card">
                <div class="commands-title">Scheduler Commands</div>
                <div class="cmd-list" id="scheduler-cmd-list">
                    <!-- Rendered by JavaScript from schedulerCommandSections -->
                </div>
            </div>
        </div>
    </div>
</div>
{{end}}
